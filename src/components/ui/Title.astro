---
interface Props {
    title: string;
    colorVariant?: "dark" | "light";
    variant?: "h1" | "h2" | "h3";
    extraClasses?: string;
}
const {
    title,
    colorVariant = "dark",
    variant = "h2",
    extraClasses,
} = Astro.props;

const colorStyles = {
    dark: "text-(--color-secondary)",
    light: "text-white",
};

const variantStyles = {
    h1: "text-3xl md:text-5xl max-w-[600px]",
    h2: "text-2xl md:text-5xl",
    h3: "text-xl md:text-2xl",
};

const Tag = variant;
---

<Tag
    class={`${variantStyles[variant]} font-bold ${colorStyles[colorVariant]} leading-tight mb-3 md:mb-5 ${extraClasses || ""}`}
    set:html={title}
/>
