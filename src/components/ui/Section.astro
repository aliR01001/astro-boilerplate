---
// Reusable section wrapper component
const {
    backgroundColor = "bg-white",
    extraClasses = "",
    size = "normal",
    center = false,
} = Astro.props;

const sizeStyles: Record<string, string> = {
    hero: "py-20 md:py-20 mb-15 md:mb-20",
    normal: "py-15 md:py-20",
    small: "py-15 md:py-20",
};
---

<section
    class={`${backgroundColor} px-6 md:px-16 lg:px-24 ${sizeStyles[size]} ${extraClasses} ${center ? "text-center" : ""}`}
>
    <div class="max-w-7xl mx-auto">
        <slot />
    </div>
</section>
